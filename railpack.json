{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "python": "3.11",
    "node": "20"
  },
  "buildAptPackages": ["ffmpeg"],
  "steps": {
    "install": {
      "commands": [
        "pip install -r backend/requirements.txt",
        "npm install --prefix frontend"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run build --prefix frontend"]
    }
  },
  "deploy": {
    "startCommand": "cd /app/backend && uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "inputs": [{ "step": "build", "include": ["."] }],
    "aptPackages": ["ffmpeg"]
  }
}
